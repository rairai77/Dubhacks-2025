{
    "manifest_version": 3,
    "name": "TabTrap",
    "version": "1.0",
    "description": "A tab finder",
    "omnibox": { "keyword": "tt" },
    "icons": {
        "16": "icon16.png",
        "48": "icon16.png",
        "128": "icon16.png"
    },
    "background": {
        "service_worker": "src/background/service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon16.png",
            "128": "icon16.png"
        }
    },
    "permissions": ["tabs", "scripting", "history", "storage", "tabGroups"],
    "host_permissions": ["<all_urls>"]
}
